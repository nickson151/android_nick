<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informacion_App"
    android:background="@drawable/second">

    <TextView
        android:id="@+id/textViewInformacion"
        android:layout_width="388dp"
        android:layout_height="419dp"
        android:background="#BBBf"
        android:gravity="center"
        android:text="SUMÉRGETE EN UN MUNDO DE DECISIONES: ¡TÚ ERES EL PROTAGONISTA!\n\nDescubre un emocionante juego de decisiones donde tú tomas las
        riendas.\n\nTus Decisiones, Tu Historia, Cada elección que hagas te llevará por caminos diferentes, creando experiencias, las personas que conozcas y cómo interactúes con
         ellas afectarán la dinámica de la
         historia"
        android:textColor="#FFFFFF"
        android:textSize="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <ImageView
        android:id="@+id/flecha_derecha_info"
        android:layout_width="76dp"
        android:layout_height="141dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/opcion_home"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903"
        app:srcCompat="@drawable/flecha_derecha" />

    <ImageView
        android:id="@+id/opcion_home"
        android:layout_width="93dp"
        android:layout_height="80dp"
        android:src="@drawable/boton_inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

</androidx.constraintlayout.widget.ConstraintLayout>